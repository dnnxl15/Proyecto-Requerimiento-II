<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/bloc" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="Sign up"
        android:textColor="#06b79e"
        android:textSize="35sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_black" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/signUp_name"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape"
            android:gravity="center_vertical"
            android:hint="Name"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:textColorHint="#8effffff" />


        <EditText
            android:id="@+id/signUp_username"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape"
            android:gravity="center_vertical"
            android:hint="Username"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:textColorHint="#8effffff" />
        <!-- Login Button -->

        <EditText
            android:id="@+id/signUp_mail"
            android:layout_width="309dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape"
            android:gravity="center_vertical"
            android:hint="Mail"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:textColorHint="#8effffff" />

        <EditText
            android:id="@+id/signUp_password"
            android:layout_width="305dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape"
            android:gravity="center_vertical"
            android:hint="@string/hint_password"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:textColor="#ffffff"
            android:textColorHint="#8effffff" />

        <CheckBox
            android:id="@+id/signUp_administratorCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:focusable="auto"
            android:paddingBottom="0dp"
            android:text="Administrator"
            android:textColor="@color/btn_login_bg" />

        <CheckBox
            android:id="@+id/signUp_regularUserCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="0dp"
            android:paddingBottom="0dp"
            android:text="Regular user"
            android:textColor="@color/btn_login_bg" />

        <Button
            android:id="@+id/signUp_loginButton"
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:paddingLeft="0dp"
            android:text="Register"
            android:textColor="#fff"
            tools:background="#aa2eac" />

        <!-- Link to Sign Up Screen -->


    </LinearLayout>

</LinearLayout>